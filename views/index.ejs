<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>FamPay Assessment</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/stylesheets/loader.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <div class="container mt-3">
      <%- include('partials/loader') %>
      <%- include('partials/video_modal') %>
      <header>
        <nav class="navbar bg-body-tertiary mt-3 mb-3" style="padding: 0;">
          <div>
            <a class="navbar-brand">
              <img src="https://cdn-icons-png.flaticon.com/512/1384/1384060.png"
                alt="YouTube" width="30" class="d-inline-block align-text-top">
              YouTube
            </a>
          </div>
        </nav>
      </header>
      <main>
        <div>
          <form>
            <div class="input-group mb-3">
              <input type="text" class="form-control" name="search" id="search"
                placeholder="Search video by title or description">
              <button class="btn" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
              </button>
            </div>
            <div class="row">
              <div class="col mt-3">
                <label for="publishedBefore" class="form-label">Published Before</label>
                <input type="datetime-local" class="form-control"
                  name="publishedBefore" id="publishedBefore">
              </div>
              <div class="col mt-3">
                <label for="publishedAfter" class="form-label">Published After</label>
                <input type="datetime-local" class="form-control"
                  name="publishedAfter" id="publishedAfter">
              </div>
            </div>
            <div class="row">
              <div class="col mt-3">
                <label for="order mb-3" class="form-label">Order By</label>
                <select class="form-control form-select form-select-sm"
                  id="order" name="order">
                  <option value="ASC">Ascending</option>
                  <option value="DESC" selected>Descending</option>
                </select>
              </div>
              <div class="col mt-3">
                <label for="limit mb-3" class="form-label">Results per page</label>
                <select class="form-control form-select form-select-sm"
                  id="limit" name="limit">
                  <option value="5">5</option>
                  <option value="10" selected>10</option>
                  <option value="25">25</option>
                  <option value="50">50</option>
                  <option value="100">100</option>
                </select>
              </div>
            </div>
          </form>
        </div>
        <div id="videos"></div>
      </main>
    </div>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="/javascripts/util.js"></script>
    <script src="/javascripts/loader.js"></script>
    <script src="/javascripts/index.js"></script>
  </body>
</html>
